generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  RECRUITER
  DEVELOPER
  ADMIN
}

model User {
  id        String      @id @default(uuid())
  name String
  profileImage  String
  role      Role
  email     String      @unique
  password  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  submissions Submission[]
}

